<%= form_with model: [@list, Bookmark.new], local: true do |form| %>
  <div>
    <%= form.label :movie_id, "Select a Movie" %>
    <%= form.collection_select :movie_id, Movie.all, :id, :title, prompt: "Choose a Movie" %>
  </div>

  <div>
    <%= form.label :comment, "Comment" %>
    <%= form.text_area :comment %>
  </div>

  <div>
    <%= form.submit "Bookmark Movie" %>
  </div>
<% end %>
